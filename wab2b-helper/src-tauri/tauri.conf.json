{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wab2b-helper",
  "version": "0.2.0",
  "identifier": "com.wab2b-helper",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "wab2b-helper",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "img-src": ["'self'", "data:", "asset:", "https://*", "blob:"],
        "media-src": ["'self'", "data:", "asset:", "https://*", "blob:"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "connect-src": ["'self'", "https://*"]
      },
      "capabilities": ["default", "main-capability"]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": ["bin/fct"],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Custom protocol handler for attachments",
    "longDescription": "A desktop utility for handling custom URL protocol requests for downloading and managing various types of attachments",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["wab2b-helper"]
      }
    },
    "opener": {
      "requireLiteralLeadingDot": false
    }
  }
}
